########################################
# AWS Provider
########################################

# AWS region where resources will be created
aws_region = "ap-south-1"

########################################
# Project Metadata
########################################

# Project name used for tagging and resource naming
project_name = "secure-aws-infra"

# Environment name (dev / stage / prod)
environment = "dev"

########################################
# Networking
########################################

# VPC CIDR block
vpc_cidr = "10.0.0.0/16"

# Public subnet CIDR
public_subnet_cidr = "10.0.1.0/24"

# Private subnet CIDR
private_subnet_cidr = "10.0.2.0/24"

########################################
# EC2 Configuration
########################################

# Instance type for both public and private EC2
instance_type = "t3.micro"

########################################
# WireGuard VPN
########################################

# WireGuard UDP port
wireguard_port = 51820

# Allowed IP ranges for VPN access
# ⚠️ Replace with your own public IP for better security
vpn_allowed_cidrs = ["0.0.0.0/0"]
