########################################
# AWS Provider
########################################

region = "ap-south-1"

########################################
# Project Metadata
########################################

project_name = "secure-aws-infra"
environment  = "dev"

########################################
# Networking
########################################

vpc_cidr            = "10.0.0.0/16"
public_subnet_cidr  = "10.0.1.0/24"
private_subnet_cidr = "10.0.2.0/24"

########################################
# EC2
########################################

# Free-tier friendly by default
instance_type = "t3.micro"

########################################
# WireGuard VPN
########################################

# Default WireGuard UDP port
wireguard_port = 51820

# Replace with your public IP before apply
vpn_allowed_cidrs = ["YOUR_PUBLIC_IP/32"]

########################################
# S3
########################################

# Must be globally unique
# Example: secure-aws-infra-dev-abc123
s3_bucket_name = "REPLACE_WITH_UNIQUE_BUCKET_NAME"
